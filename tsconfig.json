{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "types": ["jest"],
        "paths": {
            "@/components/*": ["./src/components/*"],
            "@/utils/*": ["./src/utils/*"],
            "@/hooks/*": ["./src/hooks/*"],
            "@/constants/*": ["./src/constants/*"],
            "@/services/storage/*": ["./src/services/storage/*"],
            "@/theme/*": ["./src/theme/*"],
            "@/services/*": ["./src/services/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
